echo "Sourcing .git_aliases"

alias gs="git status"
alias gl="git log"
alias gls="git log --stat"
alias gb="git branch"
ga() {
    git add "$@"
}
gap() {
    git add -p "$@"
}
gc() {
    git commit -m "$@"
}
gch() {
    git checkout -- $@
}
alias grc="git rebase --continue"
alias gcpc="git cherry-pick --continue"
alias gl="git log"

pullmaster() {
    if [ -d "$MASTER_WORKTREE" ]; then
	cd $MASTER_WORKTREE
	git pull
	cd -
    else
	git checkout master
	git pull
	git checkout -
    fi
}

masterbase() {
    git rebase -i master
}
alias mb=masterbase

function tag() {
    local hash=$(git log --pretty=format:'%h' -n 1)
    echo "$USER-$hash"
}
